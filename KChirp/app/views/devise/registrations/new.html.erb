<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="field">
    <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
</div>

<div class="field">
    <%= f.text_field :name, placeholder: "Your Name" %>
</div>

<div class="field">
    <%= f.text_field :location, placeholder: "What state do you live in?" %>
</div>

  <div class="field">
      <%= f.email_field :email, placeholder: "Your Email" %>
  </div>

<div class="field">
    <%= f.label "Avatar"%><br>
    <%=f.file_field :avatar %>
</div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password" %>
  </div>

  <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-success btn-sm" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
